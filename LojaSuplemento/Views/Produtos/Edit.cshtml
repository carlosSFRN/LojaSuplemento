@model LojaSuplemento.Models.Produto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAreaRestrita.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h5 class="m-0 font-weight-bold text-primary">Editar Produto</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="form-row mb-2">
                <input type="hidden" id="ImageUrlPathOld" name="ImageUrlPathOld" value="@ViewBag.ImageUrlPathOld"/>
                <div class="col-md-4">
                    <label asp-for="ImageUrl" class="control-label"></label>
                    <input type="hidden" asp-for="ImageUrlPath"/>
                    <div class="form-group">
                        <img src="@($"/img/produtos/"+ Model.ImageUrlPath)"
                             alt="@Model.ImageUrlPath"
                             style="width: 300px; height: 350px;" 
                             id="ImageUrlPathName"
                             />
                    </div>
                    <div class="custom-file">
                        <input asp-for="ImageUrl" class="custom-file-input" id="ImageUrl"  accept=".png, .jpg, .jpeg" onchange="document.getElementById('ImageUrlPath').value = this.files[0].name;
                            document.getElementById('ImageUrlPathName').src = window.URL.createObjectURL(this.files[0]);" />

                        <label data-browse="Procurar Imagem" class="custom-file-label" for="ImageUrl"></label>
                        <label style="display: none;" id="ImageUrl"></label>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                   
                </div>
                <div class="form-group col-md-8">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label asp-for="CodigoBarras" class="control-label"></label>
                            <input asp-for="CodigoBarras" class="form-control" />
                            <span asp-validation-for="CodigoBarras" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-8">
                            <label asp-for="TituloProduto" class="control-label"></label>
                            <input asp-for="TituloProduto" class="form-control" />
                            <span asp-validation-for="TituloProduto" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-1">
                            <label asp-for="Desativado" class="control-label"></label>
                            <input asp-for="Desativado" class="form-control" />
                            <span asp-validation-for="Desativado" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="PrecoProduto" class="control-label"></label>
                            <input type="text" asp-for="PrecoProduto" class="form-control" />
                            <span asp-validation-for="PrecoProduto" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="Quantidade" class="control-label"></label>
                            <input asp-for="Quantidade" class="form-control" />
                            <span asp-validation-for="Quantidade" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="DataProdutoInclusao" class="control-label"></label>
                            <input asp-for="DataProdutoInclusao" class="form-control" />
                            <span asp-validation-for="DataProdutoInclusao" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="IdCategoria" class="control-label"></label>
                            <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.IdCategoria"></select>
                            <span asp-validation-for="IdCategoria" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="DataProdutoValidadeInicio" class="control-label"></label>
                            <input asp-for="DataProdutoValidadeInicio" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                            <span asp-validation-for="DataProdutoValidadeInicio" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="DataProdutoValidadeFim" class="control-label"></label>
                            <input asp-for="DataProdutoValidadeFim" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                            <span asp-validation-for="DataProdutoValidadeFim" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="DescricaoProduto" class="control-label"></label>
                            <textarea asp-for="DescricaoProduto" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="DescricaoProduto" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group float-left">
                <a class="btn btn-outline-secondary mr-2" asp-action="Index">Voltar</a>
            </div>
            <div class="form-group float-right">
                <a class="btn btn-danger mr-2" data-toggle="modal" data-target="#exampleModal">Excluir</a>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar exclusão</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir?</p>
            </div>
            <div class="modal-footer">
                <a class="btn btn-danger mr-2" asp-action="Delete" asp-route-id="@Model.Id">Excluir</a>
                <input type="hidden" asp-for="Id" />
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script>
    $('#ImageUrl').change(function () {
        $('#ImageUrl').text(this.files[0].name);
        $('#ImageUrl')[0].style.display = 'block';
    });
</script>